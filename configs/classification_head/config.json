{
  "name": "Albertone_Classification",
  "model_class": "TransformerWithClassificationHead",
  "pooling_type": "cls",
  "classifier_dropout_p": 0.1,
  "classifier_dropout_inplace": false,
  "pretrained_checkpoint": "/mnt/llmdata/data/FINALE_32768.ckpt",
  "training": {
    "loss": {
      "type": "cross_entropy",
      "class_weights": "auto"
    },
    "optimizer": "adamw",
    "lr": 2e-4,
    "weight_decay": 0.0,
    "gradient_clip_val": 1.0,
    "warmup_steps": 0.1,
    "max_epochs": 5,
    "batch_size": 64,
    "accumulate_grad_batches": 1,
    "save_every_n_steps": 500,
    "seed": 27,
    "accelerator": "gpu"
  },
  "default_layer": {
    "attn_impl": "flash"
  },
  "data": {
    "train_file": "test_data/hatexplain/train.json",
    "val_file": "test_data/hatexplain/val.json",
    "text_label": "full_text",
    "target_label": "final_label",
    "num_workers": 4
  },
  "save_dir": "./checkpoints_classification",
  "wandb_project": "Albertone_Classification",
  "wandb_run_name": "Albertone_SeqClass"
}