{
  "model_class": "TransformerWithLMHead",
  "model_config": {
    "name": "Micro-Albertino",
    "hidden_dim": 512,
    "ffn_factor": 1.0,
    "n_layers": 8,
    "n_heads": 8,
    "vocab_size": 32768,
    "bos_id": 1,
    "eos_id": 2,
    "pad_id": 0,
    "tie_word_embeddings": false,
    "rms_norm_eps": 1e-6,
    "attention_type": ["sliding"],
    "sliding_window_size": 512,
    "sliding_layers": [0,2,4,6],
    "sliding_type": "partial",
    "max_seqlen": 1024,
    "block_size_for_attention": 128,
    "compile_flexattn": false,
    "bias": false,
    "training_objective": "masked",
    "alibi": true,
    "is_causal": false,
    "attn_impl": "flash"
  },
  "training": {
    "lr": 3e-4,
    "max_steps": 10000,
    "accumulate_grad_batches": 1,
    "seed": 27,
    "checkpoint_name": "micro_albertino"
  },
  "tokenizer": {
    "type": "huggingface",
    "pretrained_name": "sapienzanlp/Minerva-350M-base-v1.0",
    "varlen_strategy": "unpadding"
  },
  "data": {
    "data_root": "./datasets/liberliber_1024_token",
    "batch_size": 128,
    "num_workers": 4
  },
  "save_dir": "./checkpoints",
  "wandb_project": "matformer",
  "wandb_run_name": "micro-albertino"
}
